@{
    ViewBag.Title = "Play";
}

<div id="bodyContainer" ng-app="IgenyApp">
    <section id="content">
        <div class="container" data-ng-controller="listCtrl" ng-init="nextIgeny()">
            <div ng-repeat="model in igenyek track by model.id">
                <div class="row">
                    <div class="col-sm-3">{{model.megnevezes}}</div>
                    <div class="col-sm-3">{{model.leiras}}</div>
                </div>
            </div>
        </div>

        <div class="container" data-ng-controller="formController">
            <div class="row">
                <div class="flip-container text-center col-md-12">
                    <div class="back" ng-class="{flip: answered, correct: correctAnswer, incorrect:!correctAnswer}">
                        <p class="lead">{{Megnevezes}}</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <form class="form-horizontal">
                    <div class="form-group">
                        <label for="igenyid">ID</label>
                        <div>
                            <input name="igenyid" data-ng-model="igeny.id" type="text" id="igenyid" placeholder="ID"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <div>
                            <button type="button" class=" btn btn-default" data-ng-click="processForm()">Send</button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </section>
</div>

@section scripts {
    @Scripts.Render("~/Scripts/angular.js")
    @Scripts.Render("~/Scripts/app/igeny-controller.js")
}